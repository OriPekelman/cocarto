<turbo-frame id="modal">
  <div data-controller="modal" class="modal__overlay" id="modal-container"
       data-action="click->modal#closeFromOutside turbo:submit-end->modal#submitEnd keydown.esc@window->modal#close">
    <div class="bordered-box">
      <nav class="modal__navbar">
        <button class="button button--close" data-action="modal#close"><%= helpers.embedded_svg "close.svg" %></button>
      </nav>
      <div data-modal-target="content">
        <%= content %>
      </div>
    </div>
  </div>
</turbo-frame>
