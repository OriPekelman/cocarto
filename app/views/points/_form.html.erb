<%= form_with model: Point.new do |form| %>
  <%= form.hidden_field :layer_id, value: @layer.id %>
  Coords (<span data-map-target="longitudeDisplay"></span>; <span data-map-target="latitudeDisplay"></span>)
  <%= form.hidden_field :longitude, data: {"map-target" => "longitudeField"} %>
  <%= form.hidden_field :latitude, data: {"map-target" => "latitudeField"} %>

  <div id="fields-form">
    <% @layer.fields.each do |field| %>
      <%= render "fields/field_in_form", field: field, geometry_type: "point" %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
