<table>
    <thead>
        <tr>
            <th>Coordinates</th>
            <% @layer.fields.each do |field| %>
                <th class="field-<%= field.id %>"><%= field.label %></th>
            <% end %>
            <th id="delete-column">Delete</th>
        </tr>
    </thead>
    <tbody id="points-tbody">
    <% @layer.points.each do |point| %>
        <%= render point %>
    <% end %>
    </tbody>
</table>
