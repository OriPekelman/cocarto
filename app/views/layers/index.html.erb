<p id="notice"><%= notice %></p>

<h1 class="layers-title" ><%= t :layers %></h1>

<table class="layers-table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @layers.each do |layer| %>
      <tr>
        <td><%= layer.name %></td>
        <td><%= link_to t('show'), layer%></td>
        <td><%= link_to t('edit'), edit_layer_path(layer) %></td>
        <td><%= button_to t('destroy'), layer, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_layer'), new_layer_path, class: "layers-title" %>
