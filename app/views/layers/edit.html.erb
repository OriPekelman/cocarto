<h1>Editing Layer</h1>

<%= render 'form', layer: @layer %>

<h3>Fields</h3>
<ul>
  <%= turbo_frame_tag "fields" do %>
    <% @layer.fields.each do |field| %>
      <li id="<%= dom_id(field) %>"> <%= render field %> </li>
    <% end %>
  <% end %>
</ul>

<h3>Add a new field:</h3>
<%= render 'fields/form' %>

<%= link_to 'Show', @layer %> |
<%= link_to 'Back', layers_path %>
