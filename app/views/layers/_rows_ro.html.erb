<%# params: layer %>
<%# renders a full table of non-editable rows for a layer %>

<table class="table-show">
  <thead>
  <tr>
    <% layer.fields.each do |field| %>
      <th class="table-head-show"> <%= field.label %> </th>
    <% end %>
  </tr>
  </thead>
  <tbody id="rows-tbody">
  <%= render partial: "rows/#{layer.geometry_type}/row_ro", collection: layer.rows.order(:created_at), as: :row %>
  </tbody>
</table>
