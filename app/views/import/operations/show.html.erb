<div class="card__main-content card__main-content--wide">
  <h2 class="form__header"><%= Import::Operation.model_name.human %></h2>
  <% if @operation.ready? %>
    <%= render "form", operation: @operation %>
  <% else %>
    <%= render @operation %>
  <% end %>
</div>

<% if @operation.ready? || @operation.done? %>
  <div class="card__footer-content">
    <% if @operation.ready? %>
      <%= submit_tag t("common.start"), class: "button button--confirm", form: dom_id(@operation, :form) %>
    <% elsif @operation.done? %>
      <button class="button button--confirm" data-action="modal#close">
        <%= t("common.ok") %>
      </button>
    <% end %>
  </div>
<% end %>
