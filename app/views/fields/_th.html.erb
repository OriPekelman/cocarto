<th class="field-<%= field.id %>">
    <div class="dropdown" data-controller="dropdown">
        <div class="dropdown-trigger" data-action="click->dropdown#toggle">
            <button class="button" aria-haspopup="true" aria-controls="dropdown-menu">
                <span><%= field.label %></span>
                <span class="fas fa-fw"><%= fa_icon "angle-down" %></span>
            </button>
        </div>
        <div class="dropdown-menu" id="dropdown-menu" role="menu">
            <div class="dropdown-content">
                <%= button_to field, method: :delete, form_class: "level-item", class: "button is-ghost p-2" do %>
                    <span>Delete column</span>
                    <span class="icon"><%= fa_icon "trash-o" %></span>
                <% end %>
            </div>
        </div>
    </div>
</th>
