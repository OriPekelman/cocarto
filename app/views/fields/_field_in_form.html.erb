<div id="<%="#{field.id}-form" %>">
  <%= label_tag field.label %>
  <% if ["float", "integer"].include?(field.field_type) then %>
    <%= number_field_tag "#{geometry_type}[#{field.label}]", field.label %>
  <% else %>
    <%= text_field_tag "#{geometry_type}[#{field.label}]", field.label %>
  <% end %>
</div>
