<% if ["float", "integer"].include?(field.field_type) then %>
  <%= number_field_tag "#{field.geometry_type}[#{field.id}]", nil, id: field.id, placeholder: field.label, value: value || "" %>
<% else %>
  <%= text_field_tag "#{field.geometry_type}[#{field.id}]", nil, id: field.id, placeholder: field.label, value: value || "" %>
<% end %>
