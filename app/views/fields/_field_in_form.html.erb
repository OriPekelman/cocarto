<%# params: field, value, form_id %>
<%# renders one form field tag for a value of a row for a specific field %>
<% data = { action: "input->row#setChanged focusout->row#save" } %>
<td class="field-<%= field.id %> <%= "numerical" if field.numerical? %>">
  <% if field.numerical? %>
    <%= number_field_tag "row[fields_values][#{field.id}]", value, id: field.id, class: "numerical", data: data, form: form_id, autocomplete: :off %>
  <% elsif field.territory? %>
    <%= render "territories/search_form", field: "row[fields_values][#{field.id}]", territory: value, form_id: form_id %>
  <% elsif field.date? %>
    <%= date_field_tag "row[fields_values][#{field.id}]", value, id: field.id, data: data, form: form_id, autocomplete: "off" %>
  <% elsif field.boolean? %>
    <%= check_box_tag "row[fields_values][#{field.id}]", "1", value == "1", id: field.id, data: data, form: form_id %>
  <% else %>
    <%= text_field_tag "row[fields_values][#{field.id}]", value, id: field.id, class: "input", data: data, form: form_id, autocomplete: :off %>
  <% end %>
</td>
