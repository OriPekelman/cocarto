<% if ["float", "integer"].include?(field.field_type) then %>
  <%= number_field_tag "#{field.geometry_type}[#{field.id}]", nil, id: field.id, placeholder: field.label, class: "input", value: value, data: {action: "row#setModified focusin->row#focusIn"}, form: form %>
<% else %>
  <%= text_field_tag "#{field.geometry_type}[#{field.id}]", nil, id: field.id, placeholder: field.label, class: "input", value: value, data: {action: "row#setModified focusin->row#focusIn"}, form: form %>
<% end %>
