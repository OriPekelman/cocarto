<div class="container">
  <div class="section section--center">
    <h2 class="section__title--small"><%= t("devise.sessions.log_in") %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form"}) do |f| %>
      <div class="form__field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t("devise.placeholder.email") %>
      </div>

      <div class="form__field">
        <%= f.label :password, t("devise.passwords.password") %>
        <%= f.password_field :password, autocomplete: "current-password" %>
        <%= link_to t("devise.passwords.forgot_your_password"), new_password_path(resource_name) %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form__field form__field--inline">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t("devise.sessions.remember_me") %>
        </div>
      <% end %>

      <div class="form__buttons-bar">
        <%= f.submit t("devise.sessions.log_in"), class: "button button--confirm button--large" %>
      </div>
    <% end %>
  </div>

  <div class="section section--center">
    <p><%= t("devise.sessions.sign_up_instead_html", url: new_registration_path(resource_name)) %></p>
  </div>
</div>
