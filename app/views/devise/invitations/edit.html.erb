<div class="container">
  <div class="section section--center">
    <h2 class="section__title--small"><%= t "devise.invitations.edit.header" %></h2>

    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: {method: :put, class: "form"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>

      <div class="form__field">
        <%= f.label :display_name %>
        <%= f.text_field :display_name, autofocus: true %>
      </div>

      <div class="form__field">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", placeholder: t("devise.placeholder.email"), readonly: true %>
      </div>

      <% if f.object.class.require_password_on_accepting %>
        <div class="form__field">
          <%= f.label :password, t("devise.passwords.password") %>
          <%= f.password_field :password %>
        </div>

        <div class="form__field">
          <%= f.label :password_confirmation, t("devise.passwords.password_confirmation") %>
          <%= f.password_field :password_confirmation %>
        </div>
      <% end %>

      <div class="buttons-bar">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "button button--confirm button--large" %>
      </div>
    <% end %>
  </div>
</div>
