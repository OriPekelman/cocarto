<div class="form__buttons-bar">
  <%- if controller_name != 'sessions' %>
  <%= link_to t("devise.sessions.log_in"), new_session_path(resource_name), class: "button button--link" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("devise.registrations.sign_up"), new_registration_path(resource_name), class: "button button--link" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("devise.passwords.forgot_your_password"), new_password_path(resource_name), class: "button button--link" %>
  <% end %>
</div>
