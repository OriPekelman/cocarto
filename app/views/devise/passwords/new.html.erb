<div class="container">
  <div class="section">
    <h2 class="section__title"> <%= t("devise.passwords.forgot_your_password") %> </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "form"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form__field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form__buttons-bar">
        <%= f.submit t("devise.passwords.send_reset_password"), class: "button button--confirm" %>
      </div>
    <% end %>
  </div>

  <div class="section">
    <%= render "devise/shared/links" %>
  </div>
</div>
