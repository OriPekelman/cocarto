<div class="container">
  <div class="section section--center">
    <h2 class="section__title--small"><%= t("devise.passwords.submit_change_password") %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: "form"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form__field">
        <%= f.label :password, t("devise.passwords.new_password") %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> <%= t("devise.registrations.characters_minimum") %></em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="form__field">
        <%= f.label :password_confirmation, t("devise.passwords.password_confirmation") %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="buttons-bar">
        <%= f.submit t("devise.passwords.submit_change_password"), class: "button button--confirm button--large" %>
      </div>
    <% end %>
  </div>
</div>
