<div class="container">
  <div class="section">
    <h2 class="section__title"><%= t("devise.registrations.sign_up") %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form__field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form__field">
        <%= f.label :password, t("devise.passwords.password") %>
        <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> <%= t("devise.registrations.characters_minimum") %> </em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form__field">
        <%= f.label :password_confirmation, t("devise.passwords.password_confirmation") %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="form__buttons-bar">
        <%= f.submit t("devise.registrations.sign_up"), class: "button button--confirm" %>
      </div>
    <% end %>
  </div>

  <div class="section">
    <%= render "devise/shared/links" %>
  </div>
</div>
