<%# params: row %>
<%# renders a non-editable row in a table. used in layers/rows_ro %>

<tr id="<%= dom_id(row) %>"
    data-controller="row">
  <%= hidden_field_tag "geojson", row.geojson, data: {"row-target": "geojson"} %>
  <% row.layer.fields.each do |field| %>
    <% if field.numerical? %>
      <td class="numerical"><%= row.values[field.id] %></td>
    <% elsif field.field_type == "boolean" %>
      <td><%= check_box_tag "row[#{field.id}]", "boolean", row.values[field.id], disabled: true %></td>
    <% else %>
      <td><%= row.values[field.id] %></td>
    <% end %>
  <% end %>
</tr>
