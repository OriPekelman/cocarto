<%# params: row %>
<%# renders a hidden form for a new Row with connectors to stimulus controllers. Used in layers/edit %>

<%= form_with model: row, data: {"map-target" => "newPointForm"}, class: "is-hidden" do |form| %>
  <%= form.hidden_field :layer_id %>
  <%= form.hidden_field :longitude, data: {"map-target" => "longitudeField"} %>
  <%= form.hidden_field :latitude, data: {"map-target" => "latitudeField"} %>
  <%= form.submit %>
<% end %>
